---
import type { Person } from "@lib/types/personalData";

const { data }: { data: Person } = Astro.props;
---

<div
  class="w-80 bg-[#e8e8e8] rounded-2xl shadow-lg p-6 flex flex-col items-center gap-7 dark:bg-[#2c2c2c]"
>
  <div class="flex flex-col items-center gap-3">
    {
        data.url ? (
            <a href={data.url} class="text-xl font-semibold text-gray-800 dark:text-gray-200">
              {data.name}
            </a>
        ) : (
            <div class="text-xl font-semibold text-gray-800 dark:text-gray-200">
                {data.name}
            </div>
        )
    }
    
    <div class="text-sm text-gray-500 dark:text-gray-400">
        {data.description}
    </div>
  </div>
  {
    data.socal
  }
