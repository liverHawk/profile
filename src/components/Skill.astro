---
import IconCard from "./IconCard.astro";
import { getProgrammingLangs, getFrameworks, getTools } from "../lib/util";
---

<div class="mb-12">
    <h4 class="text-xl font-semibold mb-6 text-gray-700 dark:text-gray-300">Programming Language</h4>
    <div class="grid grid-cols-2 md:grid-cols-3 lg:grid-cols-4 xl:grid-cols-5 gap-6 justify-items-center">
        {getProgrammingLangs().map(({ set, name }) => (
            <IconCard set={set} name={name} />
        ))}
    </div>
</div>

<div class="mb-12">
    <h4 class="text-xl font-semibold mb-6 text-gray-700 dark:text-gray-300">Frameworks</h4>
    <div class="grid grid-cols-2 md:grid-cols-3 lg:grid-cols-4 xl:grid-cols-5 gap-6 justify-items-center">
        {getFrameworks().map(({ set, name }) => (
            <IconCard set={set} name={name} />
        ))}
    </div>
</div>

<div class="mb-12">
    <h4 class="text-xl font-semibold mb-6 text-gray-700 dark:text-gray-300">Tools</h4>
    <div class="grid grid-cols-2 md:grid-cols-3 lg:grid-cols-4 xl:grid-cols-5 gap-6 justify-items-center">
        {getTools().map(({ set, name }) => (
            <IconCard set={set} name={name} />
        ))}
    </div>
</div>